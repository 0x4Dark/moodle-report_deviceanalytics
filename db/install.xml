<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="report/deviceanalytics/db" VERSION="20160321" COMMENT="XMLDB file for Moodle report/deviceanalytics"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="report_deviceanalytics" COMMENT="Default comment for report_deviceanalytics">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="starttime" TYPE="int" LENGTH="11" NOTNULL="true" SEQUENCE="false" COMMENT="time that the tracking starts"/>
        <FIELD NAME="status" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="is the device analytics running"/>
        <FIELD NAME="anonymous" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="If the user data will be stored anonymously"/>
        <FIELD NAME="admin_log" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="if the admins will include inside the data"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="report_deviceanalytics_data" COMMENT="data for the table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="user_hash" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="user_role" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="object_date" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="active_moodle_lang" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_type" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="device_system" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_browser" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_browser_version" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_display_size_x" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_display_size_y" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_window_size_x" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_window_size_y" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="device_pointing_method" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="http_user_ag" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="http_ssl" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="http_acc_lang" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>